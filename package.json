    "lru-cache": "^5.1.1",
    "memory-fs": "^0.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "route-cache": "0.4.4",
    "serve-favicon": "^2.4.5",
    "vue": "^2.5.22",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.22",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "workbox-webpack-plugin": "^6.5.3"
